#:kivy 2.0.0
<Conversa>:
    canvas.before:
        Color:
            rgba:(1,1,1,1)
        Rectangle:
            pos:self.pos
            size:self.size
    orientation:'vertical'
    ScrollView:
        BoxLayout:
            id:box
            orientation:'vertical'
            size_hint_y:None
            height:self.minimum_height
    BoxLayout:
        orientation:'horizontal'
        size_hint_y:None
        height:60
        TextInput:
            id:entrada
            background_color:(0,0,0,0.1)
        Button:
            size_hint_x:None
            width:60
            on_press:root.mic()
            background_color:(0,0,0,0)
            Image:
                source:'img/mic.png'
                pos:self.pos
                height:30
                center_x:self.parent.center_x
                center_y:self.parent.center_y
<Mensagem>:
    size_hint_y:None
    padding:10
    Label:
        id:label
        text_size: self.width-20, None
        color:(0,0,0,1)
        background_color:(.9,.9,.9,1)
        canvas.before:
            Color:
                rgba:self.background_color
            Rectangle:
                pos:self.pos
                size:self.size
